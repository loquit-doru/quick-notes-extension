{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0.0",
  "description": "The fastest notes extension on Chrome. Instant capture. Zero friction. Keyboard-first.",
  "author": "Quick Notes Team",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Quick Notes (Ctrl+Shift+Q)"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Open Quick Notes"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://extensionpay.com/*"
      ],
      "js": [
        "lib/ExtPay.js"
      ],
      "run_at": "document_start"
    }
  ]
}

